{
  "type": "array",
  "items": [
    {
      "type": "object",
      "required": ["columns"],
      "properties": {
        "name": {
          "description": "table name",
          "type": "string"
        },
        "columns": {
          "type": "array",
          "description": "ordered array of column specifications",
          "items": {
            "type": "object",
            "required": ["name"],
            "properties": {
              "name": {
                "type": "string",
                "examples": ["City", "State", "My Column"]
              },
              "datatype": {
                "enum": ["int", "text", "real"]
              },
              "collate": {
                "enum": [ "nocase", "binary", "rtrim" ]
              }
            }
          }
        },
        "indexes": {
          "type": "object",
          "required": ["on"],
          "description": "map of table indexes; property name is the index name",
          "additionalProperties": {
            "type": "object",
            "properties": {
              "on": {
                "oneOf": [
                  {
                    "type": "string",
                    "examples": ["[My Column 1], lower([My Column 2])"]
                  },
                  {
                    "description": "array of indexed expressions (not yet supported by `zsv 2db`)",
                    "type": "array",
                    "items": {
                      "type": "string",
                      "examples": ["My Column 1", "lower([My Column 2])"]
                    }
                  }
                ]
              },
              "unique": { "type": "boolean" }
            }
          }
        }
      }
    },
    {
      "type": "array",
      "description": "2x2 table of data",
      "items": {
        "type": "array",
        "examples": [["A1 value", 22, true],
                     ["Abc", "def", "ghi"],
                     ["abc", "Def", ""]
                    ],
        "items": {
          "examples": ["Hi there", 123],
          "oneOf": [
            { "type": "null" },
            { "type": "integer" },
            { "type": "number" },
            { "type": "string" },
            { "type": "boolean" }
          ]
        }
      }
    }
  ]
}
